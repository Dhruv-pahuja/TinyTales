<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>TinyTales- Add New Blog</title>
</head>

<body>

    <%- include('./partials/nav.ejs') %>
        <div class="container mt-3">
            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title </label>
                    <input type="text" class="form-control" id="title" aria-describedby="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="body">Body</label>
                    <textarea class="form-control" id="body"
                        style="height: 100px" name="body"></textarea>
                </div>
                <div class="input-group mb-3">
                    <label class="input-group-text" for="CoverImage">Cover Image</label>
                    <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>